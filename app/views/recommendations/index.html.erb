<div class="page-header">
  <h1>
    Recommendations
    <a href="/recommendations/new" class="btn btn-lg btn-success">New Recommendation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recommendation meal portions</th>
        <th>Recommendation time exercise</th>
        <th>Exercise</th>
        <th>Meal</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.recommendation_meal_portions %></td>
        <td><%= recommendation.recommendation_time_exercise %></td>
        <td><%= recommendation.exercise_id %></td>
        <td><%= recommendation.meal_id %></td>
        <td><%= recommendation.user_id %></td>
        <td>
          <a href="/recommendations/<%= recommendation.id %>" class="btn btn-primary">Show</a>
          <a href="/recommendations/<%= recommendation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recommendation/<%= recommendation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
