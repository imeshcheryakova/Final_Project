<div class="page-header">
  <h1>
    My all inputs
    <a href="/users_inputs/new" class="btn btn-lg btn-success">New Input</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Exercise time</th>
        <th>Exercise</th>
        <th>Meal</th>
        <th>Actions</th>
      </tr>

      <% @users_inputs.each do |users_input| %>
      <tr>
        <td><%= users_input.exercise_time %></td>
        <td><%= users_input.exercise.exercise %></td>
        <td><%= users_input.meal.meal %></td>

        <td>
          <a href="/users_inputs/<%= users_input.id %>" class="btn btn-primary">Show</a>
          <a href="/users_inputs/<%= users_input.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_users_input/<%= users_input.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
