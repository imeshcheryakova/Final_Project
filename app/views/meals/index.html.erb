<div class="page-header">
  <h1>
    Meals
    <a href="/meals/new" class="btn btn-lg btn-success">New Meal</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Calories per portion</th>
        <th>Type</th>
        <th>Actions</th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.calories_per_portion %></td>
        <td><%= meal.meal %></td>
        <td>
          <a href="/meals/<%= meal.id %>" class="btn btn-primary">Show</a>
          <a href="/meals/<%= meal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal/<%= meal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
