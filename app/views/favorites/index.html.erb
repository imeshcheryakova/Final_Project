<div class="page-header">
  <h1>
    Favorites
    <a href="/exercises" class="btn btn-lg btn-success">New Favorite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Exercise</th>
        <th>Calories per hour</th>
        <th></th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>

        <td><%= favorite.exercise.exercise %></td>
        <td><%= favorite.exercise.calories_per_hour %></td>
        <td>
          <a href="/exercises/<%= favorite.exercise.id %>" class="btn btn-primary">Show</a>
          <a href="/exercises/<%= favorite.exercise.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>

    <div>
      <a href="/exercises" class="btn btn-success" >
        Back
      </a>
    </div>
  </div>



</div>

